[
  {
    "context": "Dock",
    "bindings": {
      "ctrl-w h": ["workspace::ActivatePaneInDirection", "Left"],
      "ctrl-w l": ["workspace::ActivatePaneInDirection", "Right"],
      "ctrl-w k": ["workspace::ActivatePaneInDirection", "Up"],
      "ctrl-w j": ["workspace::ActivatePaneInDirection", "Down"]
      // ... or other keybindings
    }
  },
  {
    "context": "Editor && (vim_mode == normal || vim_mode == visual) && !VimWaiting && !menu",
    "bindings": {
      // put key-bindings here if you want them to work in normal & visual mode
      "space k": "editor::Hover",
      "space e": "workspace::ToggleLeftDock",
      "space w": "workspace::Save",
      "space f": "file_finder::Toggle",
      "space o": "tab_switcher::Toggle",
      "space p": "outline::Toggle",
      "space v": "editor::GoToDefinitionSplit",
      "space /": "editor::ToggleComments",
      "space lr": "editor::Rename",
      "space la": "editor::ToggleCodeActions",
      "space lD": "diagnostics::ToggleWarnings",
      "space fk": "zed::OpenKeymap"
      // "shift j": "editor::MoveLineDown"
      // "shift k": "editor::MoveLineUp"
    }
  },
  {
    "context": "Editor && vim_mode == normal && !VimWaiting && !menu",
    "bindings": {
      // put key-bindings here if you want them to work only in normal mode
      "down": ["workspace::SendKeystrokes", "4 j"],
      "up": ["workspace::SendKeystrokes", "4 k"],
      "ctrl-j": "editor::MoveDown"
    }
  },
  {
    "context": "Editor && vim_mode == visual && !VimWaiting && !menu",
    "bindings": {
      // visual, visual line & visual block modes
    }
  },
  {
    "context": "Editor && vim_mode == insert && !menu",
    "bindings": {
      // put key-bindings here if you want them to work in insert mode
      // e.g.
      "ctrl-a": "editor::MoveToBeginningOfLine",
      "ctrl-e": "editor::MoveToEndOfLine",
      "ctrl-h": "editor::MoveLeft",
      "ctrl-l": "editor::MoveRight",
      "ctrl-j": "editor::MoveDown",
      "ctrl-k": "editor::MoveUp",
      "j k": "vim::NormalBefore" // remap jk in insert mode to escape.
    }
  }
  {
    "context": "Editor && (showing_code_actions || showing_completions)",
    "bindings": {
      "ctrl-k": "editor::ContextMenuPrev",
      "ctrl-j": "editor::ContextMenuNext"
    }
  },
  {
    // netrw compatibility
    "context": "ProjectPanel && not_editing",
    "bindings": {
      ":": "command_palette::Toggle",
      "a": "project_panel::NewFile",
      "/": "project_panel::NewSearchInDirectory",
      "A": "project_panel::NewDirectory",
      "space O": "project_panel::ToggleFocus",
      "h": "project_panel::CollapseSelectedEntry",
      "j": "menu::SelectNext",
      "k": "menu::SelectPrev",
      "l": "project_panel::ExpandSelectedEntry",
      "d": "project_panel::Delete",
      "r": "project_panel::Rename",
      "o": "workspace::Open",
      "x": "project_panel::Cut",
      "y": "project_panel::Copy",
      "p": "project_panel::Paste"
    }
  },
{
  "context": "tab_switcher",
  "bindings": {
    "ctrl-j": "menu::SelectNext"
  }
}
]
